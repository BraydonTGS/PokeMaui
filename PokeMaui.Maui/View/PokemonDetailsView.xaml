<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PokeMaui.Maui.View.PokemonDetailsView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="PokemonDetailsPage">
    <Grid Padding="10" BackgroundColor="{StaticResource PrimaryYellow}">
        <Frame
            Padding="0"
            HeightRequest="140"
            Style="{StaticResource CardView}">
            <Grid Padding="0" ColumnDefinitions="135, *">
                <Image
                    Aspect="AspectFill"
                    HeightRequest="135"
                    HorizontalOptions="Center"
                    Source="{Binding PokemonDto.Sprite.Image}"
                    VerticalOptions="Center"
                    WidthRequest="135" />
                <Label
                    Grid.Column="1"
                    Margin="10,0,0,0"
                    FontAttributes="Bold"
                    FontSize="25"
                    HorizontalOptions="Start"
                    Style="{StaticResource LargeLabel}"
                    Text="{Binding PokemonDto.Name}"
                    VerticalOptions="Center" />
            </Grid>
        </Frame>
    </Grid>
</ContentPage>