<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="PokeMaui.Maui.View.PokemonView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BindingContext="{Binding}">

    <Grid
        BackgroundColor="{StaticResource PrimaryYellow}"
        ColumnDefinitions="*, *"
        ColumnSpacing="5"
        RowDefinitions="*,Auto">

        <CollectionView
            Grid.Row="0"
            Grid.ColumnSpan="2"
            ItemsSource="{Binding Pokemons}"
            SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10">
                        <Frame
                            Padding="0"
                            HeightRequest="140"
                            Style="{StaticResource CardView}">
                            <Grid Padding="0" ColumnDefinitions="135, *">
                                <Image
                                    Aspect="AspectFill"
                                    HeightRequest="135"
                                    Source="{Binding Sprite.Image}"
                                    WidthRequest="135" />
                                <VerticalStackLayout
                                    Grid.Column="1"
                                    Padding="10"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Center">
                                    <Label
                                        FontAttributes="Bold"
                                        Style="{StaticResource LargeLabel}"
                                        Text="{Binding Name}" />
                                    <CollectionView ItemsSource="{Binding PokemonTypes}" SelectionMode="None">
                                        <CollectionView.ItemTemplate>
                                            <DataTemplate>
                                                <!--  Display the type name  -->
                                                <Label
                                                    FontAttributes="Italic"
                                                    Style="{StaticResource MediumLabel}"
                                                    Text="{Binding Type.Name}" />
                                            </DataTemplate>
                                        </CollectionView.ItemTemplate>
                                    </CollectionView>
                                </VerticalStackLayout>
                            </Grid>
                        </Frame>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button
            Grid.Row="1"
            Margin="10"
            Command="{Binding GenerateRandomPokemonCommand}"
            IsEnabled="{Binding IsNotBusy}"
            Style="{StaticResource ButtonOutline}"
            Text="Discover" />

        <ActivityIndicator
            Grid.RowSpan="2"
            Grid.ColumnSpan="2"
            HorizontalOptions="FillAndExpand"
            IsRunning="{Binding IsBusy}"
            IsVisible="{Binding IsBusy}"
            VerticalOptions="CenterAndExpand"
            Color="{StaticResource Accent}" />
    </Grid>
</ContentView>