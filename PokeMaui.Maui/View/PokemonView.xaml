<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="PokeMaui.Maui.View.PokemonView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BindingContext="{Binding}">

    <Grid
        BackgroundColor="{StaticResource PrimaryYellow}"
        ColumnDefinitions="*, *"
        ColumnSpacing="5"
        RowDefinitions="*,Auto">

        <CollectionView
            Grid.Row="0"
            Grid.ColumnSpan="2"
            ItemsSource="{Binding Pokemons}"
            SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10">
                        <Frame
                            Padding="0"
                            HeightRequest="140"
                            Style="{StaticResource CardView}">
                            <Grid Padding="0" ColumnDefinitions="135, *">
                                <Image
                                    Aspect="AspectFill"
                                    HeightRequest="135"
                                    HorizontalOptions="Center"
                                    Source="{Binding Sprite.Image}"
                                    VerticalOptions="Center"
                                    WidthRequest="135" />
                                <Label
                                    Grid.Column="1"
                                    Margin="10,0,0,0"
                                    FontAttributes="Bold"
                                    FontSize="25"
                                    HorizontalOptions="Start"
                                    Style="{StaticResource LargeLabel}"
                                    Text="{Binding Name}"
                                    VerticalOptions="Center" />
                            </Grid>
                        </Frame>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button
            Grid.Row="1"
            Margin="10"
            Command="{Binding GenerateRandomPokemonCommand}"
            IsEnabled="{Binding IsNotBusy}"
            Style="{StaticResource ButtonOutline}"
            Text="Discover" />

        <ActivityIndicator
            Grid.RowSpan="2"
            Grid.ColumnSpan="2"
            HorizontalOptions="FillAndExpand"
            IsRunning="{Binding IsBusy}"
            IsVisible="{Binding IsBusy}"
            VerticalOptions="CenterAndExpand"
            Color="{StaticResource Accent}" />
    </Grid>
</ContentView>