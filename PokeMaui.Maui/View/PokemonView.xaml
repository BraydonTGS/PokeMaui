<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="PokeMaui.Maui.View.PokemonView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BindingContext="{Binding}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Label
            Grid.Row="0"
            Text="{Binding Title}"
            TextColor="Black" />
        <Button
            Grid.Row="1"
            BackgroundColor="Blue"
            Command="{Binding InitTestDataCommand}"
            Text="Load Pokemon"
            TextColor="Black" />
    </Grid>

