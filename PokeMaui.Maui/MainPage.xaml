<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PokeMaui.Maui.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PokeMaui.Maui.View"
    xmlns:mct="clr-namespace:CommunityToolkit.Maui.Behaviors;assembly=CommunityToolkit.Maui"
    xmlns:model="clr-namespace:PokeMaui.Business.Models;assembly=PokeMaui.Business"
    xmlns:viewmodel="clr-namespace:PokeMaui.Maui.ViewModel"
    x:DataType="viewmodel:MainViewModel"
    Background="{StaticResource Isabelline}">

    <ContentPage.Behaviors>
        <mct:StatusBarBehavior StatusBarColor="DarkGray" StatusBarStyle="Default" />
    </ContentPage.Behaviors>
    <VerticalStackLayout>
        <Label
            HorizontalOptions="Center"
            Text="Home"
            VerticalOptions="Center" />
    </VerticalStackLayout>

</ContentPage>
